<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All friends
    </h1>

    <a href="/friends/new" class="btn btn-block btn-outline-secondary">
      Add a new friend
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Inviter
        </th>

        <th>
          Invitee
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @friends.each do |friend| %>
      <tr>
        <td>
          <%= friend.id %>
        </td>

        <td>
          <a href="users/<%= friend.inviter_id %>">
             <%= User.find_by(id: friend.inviter_id).firstname %>
          </a>
         
        </td>

        <td>
          <a href="users/<%= friend.invitee_id %>">
            <%= User.find_by(id: friend.invitee_id).firstname %>
          </a>
          
        </td>

        <td>
          <%= friend.status %>
        </td>

        <td>
          <%= time_ago_in_words(friend.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(friend.updated_at) %> ago
        </td>

        <td>
          <a href="/friends/<%= friend.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
