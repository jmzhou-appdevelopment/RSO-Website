<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All attendances
    </h1>

    <a href="/attendances/new" class="btn btn-block btn-outline-secondary">
      Add a new attendance
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          user
        </th>

        <th>
          Event
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @attendances.each do |attendance| %>
      <tr>
        <td>
          <%= attendance.id %>
        </td>

        <td>
          <%= attendance.user_id %>
        </td>

        <td>
          <%= attendance.event_id %>
        </td>

        <td>
          <%= time_ago_in_words(attendance.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(attendance.updated_at) %> ago
        </td>

        <td>
          <a href="/attendances/<%= attendance.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
