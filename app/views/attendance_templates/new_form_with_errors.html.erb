<!-- Validation failure messages -->
<% if @attendance.present? %>
  <% if @attendance.errors.any? %>
    <% @attendance.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new attendance
</h1>


<hr>

<form action="/create_attendance" method="post">

  <div class="form-group">
    <label for="student_id">
      Student
    </label>

    <input type="text" id="student_id" name="student_id" class="form-control" value="<%= @attendance.student_id %>">
  </div>

  <div class="form-group">
    <label for="event_id">
      Event
    </label>

    <input type="text" id="event_id" name="event_id" class="form-control" value="<%= @attendance.event_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create attendance
  </button>
</form>

<hr>

<a href="/attendances">
  Go back
</a>
