<% if @event.present? %>
  <% @event.errors.full_messages.each do |message| %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
  <%= message %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

  <% end %>
<% end %>


<h1>
  Edit Event
</h1>

<hr>

<form action="/update_event/<%= @event.id %>" method="post">
  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @event.title %>">
  </div>

  
  <!-- Label and input for blurb -->
  <div class="form-group">
    <label for="blurb">
      Blurb
    </label>

    <input type="text" id="blurb" name="blurb" class="form-control" value="<%= @event.blurb %>">
  </div>

  <!-- Label and input for description -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3" value="<%= @event.description %>"></textarea>
  </div>
  
  <!-- Label and input for time -->
  <div class="form-group">
    <label for="time">
    Time
    </label>

    <input type="text" id="time" name="time" class="form-control" value="<%= @event.time %>">
  </div>
  
  <!-- Label and input for location -->
  <div class="form-group">
    <label for="location">
      Location
    </label>

    <input type="text" id="location" name="location" class="form-control" value="<%= @event.location %>">
  </div>
  
  <!-- Label and input for club -->
  <div class="form-group">
    <label for="club">
      Club
    </label>
    <%= select_tag("club_id", options_from_collection_for_select(Club.all, :id, :title, @event.try(:club_id)), :class => "form-control") %>
  or <a href="/clubs/new">add a new club</a> first
  </div>
  
  <!-- Label and input for image_url -->
  <div class="form-group">
    <label for="image_url">
      Image url
    </label>

    <input type="text" id="image_url" name="image_url" class="form-control" value="<%= @event.image %>">
  </div>
 
  <button class="btn btn-block btn-outline-secondary">
    Update Event
  </button>
</form>

<hr>

<a href="/clubs">
  Go back
</a>
