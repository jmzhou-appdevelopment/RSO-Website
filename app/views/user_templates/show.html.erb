<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
          <div class="card-header">
            <h2>
                All Users
            </h2>
          </div>
          <ul class="list-group">
              <% @users.each do |user| %>
              <li class="list-group-item">
                  <a href="/users/<%= user.id %>">
                      <%= user.firstname %>
                  </a>
              </li>
            <% end %>
          </ul>
        </div>
    </div>
</div>