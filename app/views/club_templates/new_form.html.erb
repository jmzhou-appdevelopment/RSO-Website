<% if @club.present? %>
  <% @club.errors.full_messages.each do |message| %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
  <%= message %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

  <% end %>
<% end %>


<h1>
  Add a new club
</h1>

<hr>

<form action="/create_club" method="post">
  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control">
  </div>

  
  <!-- Label and input for blurb -->
  <div class="form-group">
    <label for="blurb">
      Blurb
    </label>

    <input type="text" id="blurb" name="blurb" class="form-control">
  </div>

  <!-- Label and input for summary -->
  <div class="form-group">
    <label for="summary">
      Summary
    </label>

    <textarea id="summary" name="summary" class="form-control" rows="3"></textarea>
  </div>

  <!-- Label and input for image_url -->
  <div class="form-group">
    <label for="image_url">
      Image url
    </label>

    <input type="text" id="image_url" name="image_url" class="form-control">
  </div>
 
  <button class="btn btn-block btn-outline-secondary">
    Create club
  </button>
</form>

<hr>

<a href="/clubs">
  Go back
</a>
