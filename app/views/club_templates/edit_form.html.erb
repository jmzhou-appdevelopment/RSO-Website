<% if @club.present? %>
  <% @club.errors.full_messages.each do |message| %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
  <%= message %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

  <% end %>
<% end %>

<h1>
  Edit club #<%= @club.id %>
</h1>

<hr>

<form action="/update_club/<%= @club.id %>" method="post" >
  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @club.title %>">
  </div>


  <!-- Label and input for duration -->
  <div class="form-group">
    <label for="blurb">
     Blurb
    </label>

    <input type="text" id="blurb" name="blurb" class="form-control" value="<%= @club.blurb %>">
  </div>

  <!-- Label and input for description -->
  <div class="form-group">
    <label for="summary">
      Summary
    </label>

    <textarea id="summary" name="summary" class="form-control" rows="3"><%= @club.summary %></textarea>
  </div>
  
    <!-- Label and input for schedule -->
  <div class="form-group">
    <label for="schedule">
      Schedule & Location
    </label>

    <textarea id="schedule" name="schedule" class="form-control" rows="3"><%= @club.schedule %></textarea>
  </div>
  
  <!-- Label and input for commitment -->
  <div class="form-group">
    <label for="commitment">
      Commitment
    </label>

    <textarea id="commitment" name="commitment" class="form-control" rows="3"><%= @club.commitment %></textarea>
  </div>
  
  <!-- Label and input for getinvolved -->
  <div class="form-group">
    <label for="getinvolved">
      Get Involved
    </label>

    <textarea id="getinvolved" name="getinvolved" class="form-control" rows="3"><%= @club.getinvolved %></textarea>
  </div>

  <!-- Label and input for image_url -->
  <div class="form-group">
    <label for="image_url">
      Image url
    </label>

    <input type="text" id="image_url" name="image_url" class="form-control" value="<%= @club.source %>">
  </div>
  
  <div class="form-group">
    <label for="admin_user_id">
      Club Admin
    </label>

    <%= select_tag("admin_user_id", options_from_collection_for_select(User.all, :id, :firstname, @club.try(:user_id)), :class => "form-control") %>
  or <a href="/users/new">add a new user</a> first
  </div>


  <button class="btn btn-block btn-outline-secondary">
    Update club
  </button>
</form>

<hr>

<a href="/clubs">
  Go back
</a>
